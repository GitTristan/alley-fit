<div class="form-horizontal">
  <%= form_for @assessments do |f| %>

  <div class="form-group">
    <%= f.label :assessment_name, class: "col-md-2 control-label" %>
    <div class="col-md-5">
      <%= f.text_field :assessment_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :assessment_date, class: "col-md-2 control-label" %>
    <div class="col-md-5">
      <%= f.date_field :assessment_date, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :overhead_squat, class: "col-md-2 control-label" %>
    <div class="col-md-5">
      <%= f.text_field :overhead_squat, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :single_leg_squat, class: "col-md-2 control-label" %>
    <div class="col-md-5">
      <%= f.text_field :single_leg_squat, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :right_hip_strength, class: "col-md-2 control-label" %>
    <div class="col-md-5">
      <%= f.number_field :right_hip_strength, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :left_hip_strength, class: "col-md-2 control-label" %>
    <div class="col-md-5">
      <%= f.number_field :left_hip_strength, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :shoulder_mobility, class: "col-md-2 control-label" %>
    <div class="col-md-5">
      <%= f.text_field :shoulder_mobility, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :right_glute_activation, class: "col-md-2 control-label" %>
    <div class="col-md-5">
      <%= f.text_field :right_glute_activation, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :left_glute_activation, class: "col-md-2 control-label" %>
    <div class="col-md-5">
      <%= f.text_field :left_glute_activation, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :plank, class: "col-md-2 control-label" %>
    <div class="col-md-5">
      <%= f.number_field :plank, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :right_plank, class: "col-md-2 control-label" %>
    <div class="col-md-5">
      <%= f.number_field :right_plank, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :left_plank, class: "col-md-2 control-label" %>
    <div class="col-md-5">
      <%= f.number_field :left_plank, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :leg_lowering, class: "col-md-2 control-label" %>
    <div class="col-md-5">
      <%= f.text_area :leg_lowering, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :push_up, class: "col-md-2 control-label" %>
    <div class="col-md-5">
      <%= f.text_area :push_up, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :blood_pressure, class: "col-md-2 control-label" %>
    <div class="col-md-5">
      <%= f.text_area :blood_pressure, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :weight, class: "col-md-2 control-label" %>
    <div class="col-md-5">
      <%= f.number_field :weight, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :height, class: "col-md-2 control-label" %>
    <div class="col-md-5">
      <%= f.text_area :height, class: "form-control" %>
    </div>
  </div>
<% end %>
</div>
