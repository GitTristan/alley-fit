<div class="container">
  <div class="page-header">
    <div class="pull-right">
    <%= link_to "Update Goal", edit_client_goal_path(@client, @goal), class: "btn btn-sample" %>
    <%= link_to  "Delete Goal", client_goal_path(@client, @goal), method: :delete, class: "btn btn-custom",data: { confirm: "Are you sure you want to do this Alley?" }  %>
  </div>
    <h1><%= @client.name %></h1>
    <h3>Goal: <%= @goal.goal_name %></h3>
  </div>

  <ol class="breadcrumb">
    <li><%= link_to "Client List", root_path %></li>
    <li><%= link_to @client.name, client_path(@client) %></li>
    <li class="active"><%= @client.goals.name %></li>
  </ol>
    <div class="jumbotron">
      <dl class="dl-horizontal">
        <dt>Goal Name</dt>
        <dd><%= @goal.goal_name %></dd>
        <dt>Created</dt>
        <dd><%= @goal.created_at %></dd>
        <dt>Target Date</dt>
        <dd><%= @goal.target_date %></dd>
        <dt>Goals</dt>
        <dd><%= @goal.goals %></dd>
      </dl>
    </div>
  </div>
