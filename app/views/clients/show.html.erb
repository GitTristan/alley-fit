
<div class="container">
  <div class="page-header">
    <div class="pull-right">
    <%= link_to "Edit", edit_client_path(@client), class: "btn btn-primary" %>
    <%= link_to  "Delete Client", client_path(@client), method: :delete, class: "btn btn-danger",data: { confirm: "Are you sure you want to do this Alley?" }  %>
  </div>
    <h1><%= @client.name %></h1>
  </div>
  <h3>Contact Info</h3>
  <div class="jumbotron">
    <dl class="dl-horizontal">
      <dt>Phone</dt>
      <dd><%= @client.phone %></dd>
      <dt>Email</dt>
      <dd><%= mail_to @client.email %></dd>
      <dt>Member ID</dt>
      <dd><%= @client.member_id %></dd>
      <dt>Emergency Contact</dt>
      <dd><%= @client.emergency_contact %></dd>
      <dt>Emergency Number</dt>
      <dd><%= @client.emergency_number %></dd>
      <dt>Additional Info</dt>
      <dd><%= @client.additional_info %></dd>
    </dl>
  </div>

  <h3>Workouts</h3>
  <div class="jumbotron">
    <div class="pull-right">
    <%= link_to "New Workout", new_client_workout_path(@client.id), class: "btn btn-primary" %>
  </div>
    <% @client.workouts.each do |w| %>
      <ul>
        <li><%= link_to w.date, client_workout_path(@client, w) %></li>
      </ul>
    <% end %>
  </div>

  <h3>Assesments</h3>
  <div class="jumbotron">
    <div class="pull-right">
    <%= link_to "New Assessment", new_client_assessment_path(@client.id), class: "btn btn-primary" %>
  </div>
    <% @client.assessments.each do |a| %>
      <ul>
        <li><%= link_to a.assessment_name, client_assessment_path(@client, a) %></li>
      </ul>
    <% end %>
  </div>

  <h3>Goals</h3>
  <div class="jumbotron">
    <div class="pull-right">
    <%= link_to "New Goal", new_client_goal_path(@client.id), class: "btn btn-primary" %>
  </div>
    <% @client.goals.each do |g| %>
      <ul>
        <li><%= link_to g.goal_name, client_goal_path(@client, g) %></li>
      </ul>
    <% end %>
  </div>

</div>
