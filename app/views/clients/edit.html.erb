<div class="container">
  <div class="page-header">
    <h1>Update Client</h1>
  </div>

  <%= render partial: "shared/errors", locals: {object: @client} %>
<div class="col-md-8">
  <%= render partial: "form", locals: {button_name: "Update Client"} %>
</div>
<div class="col-md-4">
  <div class="form-horizontal">
    <%= form_for [@trainer, @client] do |f| %>


      <div class="form-group">
        <%= f.label :password, class: "col-md-4 control-label" %>
        <div class="col-md-6">
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: "col-md-4 control-label" %>
        <div class="col-md-6">
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-4 col-sm-6">
          <%= f.submit "Update Password", class: "btn btn-sample"%>
          <%= link_to "Cancel", trainer_clients_path, class: "btn btn-custom" %>
        </div>
      </div>

    <% end %>
  </div>

</div>


</div>
